<div class="fixed bottom-0 right-0 z-50 w-full max-w-sm space-y-4">
  <div class="flex flex-col flex-shrink-0 mb-4">
    <%= turbo_frame_tag "flash-notifications" do %>
      <% flash.each do |type, msg| %>
        <%= render NotificationComponent.new(type: type, data: msg) %>
      <% end %>
    <% end %>
  </div>
</div>
