<div
  class="my-2 bg-white rounded-lg shadow-lg opacity-0 pointer-events-auto -translate-y-10 transition duration-500 ease-in-out transform"
  data-controller="notification"
>
  <div class="overflow-hidden rounded-lg shadow-xs">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="<%= @icon_color_class %>">
            <i class="<%= @icon_class %>"></i>
          </div>
        </div>
        <div class="ml-2 w-0 flex-1 pt-0.5">
          <p class="text-sm font-medium text-gray-900 leading-5">
            <%= @data[:title] %>
          </p>
          <% if @data[:body].present? %>
            <p class="mt-1 text-sm text-gray-500 leading-5">
              <%= @data[:body] %>
            </p>
          <% end %>
        </div>
        <div class="flex flex-shrink-0 ml-4">
          <button
            class="inline-flex text-gray-400 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150"
            data-action="click->notification#close"
          >
            <i class="w-5 h-5 fas fa-times"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
